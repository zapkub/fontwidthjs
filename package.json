{
  "name": "fontwidth",
  "version": "0.1.0",
  "description": "A TypeScript library for font width calculations",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rollup -c",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:browser": "playwright test",
    "test:browser:headed": "playwright test --headed",
    "dev": "rollup -c -w",
    "demo": "node demo/server.js",
    "demo:open": "node demo/server.js & sleep 2 && open http://localhost:8000/demo/",
    "demo:test": "node demo/server.js & sleep 3 && yarn test:browser; kill %1",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "font",
    "width",
    "typescript",
    "browser",
    "nodejs"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "opentype.js": "^1.3.4"
  },
  "devDependencies": {
    "@playwright/test": "^1.52.0",
    "@rollup/plugin-commonjs": "^28.0.3",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-typescript": "^11.1.5",
    "@types/jest": "^29.5.8",
    "@types/node": "^22.15.30",
    "@types/opentype.js": "^1.3.8",
    "jest": "^29.7.0",
    "playwright": "^1.52.0",
    "rollup": "^4.6.1",
    "ts-jest": "^29.1.1",
    "tslib": "^2.8.1",
    "typescript": "^5.3.2"
  },
  "packageManager": "yarn@4.3.1"
}
