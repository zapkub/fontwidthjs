{
  "name": "fontwidth",
  "version": "0.1.0",
  "description": "A TypeScript library for font width calculations",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rollup -c",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:browser": "playwright test",
    "test:browser:headed": "playwright test --headed",
    "dev": "rollup -c -w",
    "demo": "node demo/server.js",
    "demo:open": "node demo/server.js & sleep 2 && open http://localhost:8000/demo/",
    "demo:test": "node demo/server.js & sleep 3 && yarn test:browser; kill %1",
    "lint": "eslint . --ext .ts,.js,.tsx,.jsx",
    "lint:fix": "eslint . --ext .ts,.js,.tsx,.jsx --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "tsc --noEmit",
    "quality": "yarn typecheck && yarn lint && yarn format:check",
    "quality:fix": "yarn typecheck && yarn lint:fix && yarn format",
    "prepublishOnly": "yarn quality && yarn build",
    "prepare": "husky"
  },
  "keywords": [
    "font",
    "width",
    "typescript",
    "browser",
    "nodejs"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "opentype.js": "^1.3.4"
  },
  "devDependencies": {
    "@playwright/test": "^1.52.0",
    "@rollup/plugin-commonjs": "^28.0.3",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-typescript": "^11.1.5",
    "@types/jest": "^29.5.8",
    "@types/node": "^22.15.30",
    "@types/opentype.js": "^1.3.8",
    "@typescript-eslint/eslint-plugin": "^8.33.1",
    "@typescript-eslint/parser": "^8.33.1",
    "eslint": "^9.28.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.4.1",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^16.1.0",
    "playwright": "^1.52.0",
    "prettier": "^3.5.3",
    "rollup": "^4.6.1",
    "ts-jest": "^29.1.1",
    "tslib": "^2.8.1",
    "typescript": "^5.3.2"
  },
  "lint-staged": {
    "*.{ts,js,tsx,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,html,css}": [
      "prettier --write"
    ]
  },
  "packageManager": "yarn@4.3.1"
}
